{{!-- view original post --}}
    <header class="jumbotron">
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            {{#if logged_in}}
            <li class="nav-item">
                <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>           
            <li class="nav-item">
                <a class="nav-link" id="logout" href="/">Logout</a>
            </li>
            {{else}}
            <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
            </li>
            {{/if}}
        </ul>
        <h1 class="p-3">Paddles-UP Coders!</h1>
        <img class="mx-3" src="/images/icons8-dragon-boat-100.png"></img>
    </header>

<div class="card mx-auto mb-4">
    <div class="card-header" data-id={{post.id}}>
        {{post.title}}
        <p class="author">Posted by {{post.user.user_name}} on {{format_date post.date_created}}</p>
    </div>
    <div class="card-body">
        <p>{{post.text}}</p>
    </div>
</div>

 {{!-- view comments --}}
 {{#if comments}}
{{#each comments}}
{{>postedcomment}}
{{/each}}
{{/if}}

{{!-- create new comment --}}
<div class="card mx-auto mb-4">
    <div class="card-header">
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea class="form-control" id="comment" rows="3"></textarea>
            </div>
            <div class="d-grid gap-2 mb-2">
                <button type="button" class="btn btn-secondary" id="btn-comment" data-comment={{post.id}}>Add
                    Comment</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/comment.js"></script>
